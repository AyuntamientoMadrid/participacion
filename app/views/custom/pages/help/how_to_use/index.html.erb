<% content_for :canonical do %>
  <%= render "shared/canonical", href: how_to_use_url %>
<% end %>

<section class="section pb-3 pt-3 bg-primary text-white">
  <div class="container">
    <div class="row">
      <div class="d-flex justify-content-between flex-wrap">
        <div class="h1 text-center">
          <% if feature?(:help_page) %>
            <%= back_link_to help_path %>
          <% end %>
        <%= t("pages.help.titles.how_to_use") %>
        </div>


      </div>
    </div>
  </div>
</section>

<section class="section py-3 py-md-6">
  <div class="container-xxl">
    <div class="row justify-content-center">
      <div class="col-lg-10 mb-3">
        <%= markdown t("pages.help.how_to_use.text") %>
      </div>
    </div>
  </div>
</section>
