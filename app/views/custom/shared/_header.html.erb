<% if header.present? %>

  <section class="section-header bg-primary text-white pt-3 pb-5 pt-md-0 pb-md-7">
    <div class="container">
      <div class="row justify-content-center justify-content-lg-between align-items-center">
        <div class="col-12 col-md-8 col-lg-5 text-center text-lg-left">
          <h3><%= header.label %></h3>
          <h1 class="mb-0"><%= header.title %></h1>
          <p class="lead fw-normal text-muted mt-4 mb-4 mb-lg-5"><%= header.description %></p>
          <%= link_to header.link_text, header.link_url, class: "btn btn-white" %>
        </div>
        <% if header.image.present? %>
          <div class="col-12 col-lg-6 d-none d-lg-block">
            <%= image_tag(header.image_url(:large), alt: header.image.title) %>
          </div>
        <% end %>
      </div>
    </div>
  </section>
<% end %>
