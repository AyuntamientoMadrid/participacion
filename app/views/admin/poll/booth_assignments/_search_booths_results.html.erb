<% if @booths.blank? %>
  <div class="callout alert margin-bottom">
    <%= t("admin.shared.no_search_results") %>
  </div>
<% else %>
  <h3><%= t("admin.shared.search_results") %></h3>
<% end %>

<% if @booths.any? %>
  <table>
    <thead>
      <tr>
        <th><%= t("admin.shared.labels.name") %></th>
        <th><%= t("admin.shared.labels.location") %></th>
      </tr>
    </thead>
    <tbody>
      <% @booths.each do |booth| %>
        <tr>
          <td><%= booth.name %></td>
          <td><%= booth.location %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
