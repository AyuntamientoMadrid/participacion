<h3 id="<%= poll.id %>"><%= poll.name %></h3>

<p class="stat-number margin-top">
  Nº TOTAL DE PAPELETAS<br>
  <span><%= stats['total_votes'] %></span>
</p>

<table class="polls-participation-letter margin-top">
  <thead>
    <tr>
      <th scope="col" class="border-right">VOTOS</th>
      <th scope="col">WEB</th>
      <th scope="col">URNAS</th>
      <th scope="col">CORREO</th>
      <th scope="col" class="border-left">TOTAL</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row" class="text-left border-right">Válidos</th>
      <td><%= stats['web_votes'] %> <small><em>(<%= percent_stat(stats['web_votes'], stats['total_valid_votes']) %>%)</em></small></td>
      <td><%= stats['booth_votes'] %> <small><em>(<%= percent_stat(stats['booth_votes'], stats['total_valid_votes']) %>%)</em></small></td>
      <td><%= stats['letter_votes'] %> <small><em>(<%= percent_stat(stats['letter_votes'], stats['total_valid_votes']) %>%)</em></small></td>
      <td class="border-left"><%= stats['total_valid_votes'] %> <small><em>(<%= percent_stat(stats['total_valid_votes'], stats['total_total']) %>%)</em></small></td>
    </tr>
    <tr>
      <th scope="row" class="text-left border-right">En blanco</th>
      <td><%= stats['white_web_votes'] %> <small><em>(<%= percent_stat(stats['white_web_votes'], stats['total_white_votes']) %>%)</em></small></td>
      <td><%= stats['white_booth_votes'] %> <small><em>(<%= percent_stat(stats['white_booth_votes'], stats['total_white_votes']) %>%)</em></small></td>
      <td><%= stats['white_letter_votes'] %> <small><em>(<%= percent_stat(stats['white_letter_votes'], stats['total_white_votes']) %>%)</em></small></td>
      <td class="border-left"><%= stats['total_white_votes'] %> <small><em>(<%= percent_stat(stats['total_white_votes'], stats['total_total']) %>%)</em></small></td>
    </tr>
    <tr>
      <th scope="row" class="text-left border-right">Nulos</th>
      <td><%= stats['null_web_votes'] %> <small><em>(<%= percent_stat(stats['null_web_votes'], stats['total_null_votes']) %>%)</em></small></td>
      <td><%= stats['null_booth_votes'] %> <small><em>(<%= percent_stat(stats['null_booth_votes'], stats['total_null_votes']) %>%)</em></small></td>
      <td><%= stats['null_letter_votes'] %> <small><em>(<%= percent_stat(stats['null_letter_votes'], stats['total_null_votes']) %>%)</em></small></td>
      <td class="border-left"><%= stats['total_null_votes'] %> <small><em>(<%= percent_stat(stats['total_null_votes'], stats['total_total']) %>%)</em></small></td>
    </tr>
    <tr>
      <th scope="row" class="text-left border-right">TOTAL</th>
      <td><strong><%= stats['total_web'] %> <small><em>(<%= percent_stat(stats['total_web'], stats['total_total']) %>%)</em></small></strong></td>
      <td><strong><%= stats['total_booth'] %> <small><em>(<%= percent_stat(stats['total_booth'], stats['total_total']) %>%)</em></small></strong></td>
      <td><strong><%= stats['total_letter'] %> <small><em>(<%= percent_stat(stats['total_letter'], stats['total_total']) %>%)</em></small></strong></td>
      <td class="border-left"><strong><%= stats['total_total'] %></strong></td>
    </tr>
  </tbody>
</table>