<!DOCTYPE html>
<html lang="<%= I18n.locale %>">
  <head>
    <%= render "layouts/common_head", default_title: setting["org_name"] %>
    <%= render "layouts/meta_tags" %>
    <%= raw setting["html.per_page_code_head"] %>
  </head>

  <body class="auth-page">
    <%= raw setting["html.per_page_code_body"] %>
    <div class="wrapper">
      <div class="small-12 medium-12 column">
        <h1 class="logo margin hide-for-small-only">
          <%= link_to root_path do %>
            <%= image_tag(image_path_for("logo_header.png"), class: "image-contact", alt: setting["org_name"]) %>
          <% end %>
        </h1>
        <div class="row show-for-small-only">
          <h1 class="logo margin">
            <%= link_to root_path do %>
              <%= image_tag(image_path_for("logo_header.png"), alt: setting["org_name"]) %>
            <% end %>
          </h1>
        </div>
        <div class="row">
          <div class="small-12 medium-12 small-centered column">
            <div class="medium-6 column">
              <div class="auth-form margin">
                <%= render "layouts/flash" %>
              </div>
            </div>
              <%= yield %>
          </div>
        </div>
      </div>
    </div>

    <div class="footer">
      <%= render "layouts/footer" %>
    </div>
  </body>
</html>
