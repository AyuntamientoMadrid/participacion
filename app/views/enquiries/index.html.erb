<div class="expanded no-margin-top margin-bottom dark-heading enquiries padding">
  <div class="row">
    <div class="small-12 medium-6 column">
      <h2>
        <%= t("enquiries.index.title") %>
      </h2>
      <p>
        <%= t("enquiries.index.description_html").html_safe %>
      </p>
    </div>
  </div>
</div>

<main>
  <div class="row">
    <div class="small-12 column">
      <% if @enquiries.present? %>
        <div class="proposals-ballot-list">
          <% @enquiries.each do |enquiry| %>
            <div class="proposal-sucessfull">
              <h3><%= link_to enquiry.title, enquiry %></h3>
              <div class="info">
                <%= t("enquiries.index.date_from") %>
                <%= enquiry.open_at.to_date %>
                <%= t("enquiries.index.date_to") %>
                <%= enquiry.closed_at.to_date %>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
      <div class="callout primary">
          <%= t("enquiries.index.nothing_to_vote") %>
        </div>
      <% end %>
    </div>
  </div>
</main>
