<section class="section py-5" id="feed_<%= kind %>">
  <div class="container bg-gray-200 z-2 mt-sm-n6 mt-md-n7">
    <div class="row py-5">
      <div class="d-flex justify-content-center justify-content-md-between flex-wrap">
        <div class="h2 text-center mb-3">
          <%= t("welcome.feed.most_active.#{kind}") %>
        </div>
        <div class="px-3 pb-3 pb-md-0">
          <%= link_to t("welcome.feed.see_all.#{kind}"), see_all_path, class: "btn btn-sm btn-primary" %>
        </div>
      </div>
    </div>
    <div class="row">
      <% if feed.items.any? %>
        <div class="card-group">
          <% feed.items.each do |item| %>
            <%= render item_component_class.new(item) %>
          <% end %>
        </div>
      <% else %>
        <div class="alert alert-primary" role="alert"><%= t("welcome.feed.no_items.#{kind}") %></div>
      <% end %>
    </div>
  </div>
</section>
