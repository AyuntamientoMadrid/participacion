<% provide(:title) do %>
  <%= t("admin.header.title") %> - <%= title %>
<% end %>

<h2><%= title %></h2>

<table>
  <thead>
    <tr>
      <th><%= attribute_name(:code) %></th>
      <th><%= attribute_name(:title) %></th>
      <th><%= attribute_name(:description) %></th>
      <th><%= t("admin.actions.actions") %></th>
    </tr>
  </thead>

  <tbody>
    <% goals.each do |goal| %>
      <tr id="<%= dom_id(goal) %>" class="goal">
        <td><%= goal.code %></td>
        <td><%= goal.title %></td>
        <td><%= goal.description %></td>
        <td><%= render Admin::TableActionsComponent.new(goal, actions: [:edit]) %>
      </tr>
    <% end %>
  </tbody>
</table>
